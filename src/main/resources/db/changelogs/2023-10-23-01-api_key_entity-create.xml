<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

    <changeSet id="2023-10-23-01-api_key_entity-create" author="De Filippi Ale">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="api_key"/>
            </not>
        </preConditions>
        <comment>api_key create</comment>

        <createTable tableName="api_key">
            <column name="id" type="INT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_API_KEY"/>
            </column>
            <column name="key" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="token" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="data_inserimento" type="datetime" defaultValueDate="NOW(1)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="task_has_user"/>
        </rollback>
    </changeSet>

</databaseChangeLog>